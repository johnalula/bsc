<?php
$this->Js->get('#PerspectiveChartId')->event('change', 
	$this->Js->request(array(
		'controller'=>'perspectives',
		'action'=>'pie3d'
		), array(
		'update'=>'#PerspectivePchart',
		'async' => true,
		'method' => 'post',
		'dataExpression'=>true,
		'data'=> $this->Js->serializeForm(array(
			'isForm' => true,
			'inline' => true
			))
		))
	);
